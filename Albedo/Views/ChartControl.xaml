                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <RadioButton Grid.Column="0" Command="{Binding IntervalClick}" CommandParameter="1분" Content="1분"/>
            <RadioButton Grid.Column="1" Command="{Binding IntervalClick}" CommandParameter="5분" Content="5분"/>
            <RadioButton Grid.Column="2" Command="{Binding IntervalClick}" CommandParameter="15분" Content="15분"/>
            <RadioButton Grid.Column="3" Command="{Binding IntervalClick}" CommandParameter="30분" Content="30분"/>
            <RadioButton Grid.Column="4" Command="{Binding IntervalClick}" CommandParameter="1시간" Content="1시간"/>
            <RadioButton Grid.Column="5" Command="{Binding IntervalClick}" CommandParameter="4시간" Content="4시간"/>
